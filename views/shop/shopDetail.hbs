    <!-- Start Top Search -->
    <div class="top-search">
        <div class="container">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
            </div>
        </div>
    </div>
    <!-- End Top Search -->

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Shop Detail</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                        <li class="breadcrumb-item active">Shop Detail </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Shop Detail  -->
    <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    {{#with product_detail}}
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active"> <img class="d-block w-100" src="{{IMAGE}}" alt="First slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="{{IMAGE}}" alt="Second slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="{{IMAGE}}" alt="Third slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev"> 
						<i class="fa fa-angle-left" aria-hidden="true"></i>
						<span class="sr-only">Previous</span> 
					</a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next"> 
						<i class="fa fa-angle-right" aria-hidden="true"></i> 
						<span class="sr-only">Next</span> 
					</a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="{{IMAGE}}" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="{{IMAGE}}" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="{{IMAGE}}" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>
                
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <h2>{{PRODUCT_NAME}}</h2>
                        <h5>${{PRICE}}</h5>
                        <p class="available-stock"><span> More than {{QUANTITY}} available / {{SOLD}} sold </span><p>
						<h4>Short Description:</h4>
						<p>
                            {{DETAIL}}
                        </p>
						<ul>
							<li style="width: 100%;">
								<div class="form-group">
                                    {{#if ../user}}
                                        {{#equal inCart 0}}
                                            {{#equal STOCK "IN STOCK"}}
                                            <label class="control-label">Quantity</label>
                                            <input class="form-control" value="0" min="0" max="20" type="number">
                                            {{/equal}}
                                            {{#equal STOCK "OUT STOCK"}}
                                            <p class="no_result_title" style="font-size:25px">Sorry, this product is out of stock </p>
                                            {{/equal}}
                                        {{/equal}}

                                        {{#equal inCart 1}}
                                            <p class="no_result_title" style="font-size:25px">You already have this product in cart </p>
                                            
                                        {{/equal}}
                                    {{else}}
                                        {{#equal STOCK "IN STOCK"}}
                                        <label class="control-label">Quantity</label>
                                        <input class="form-control" value="0" min="0" max="20" type="number">
                                        {{/equal}}
                                        {{#equal STOCK "OUT STOCK"}}
                                        <p class="no_result_title" style="font-size:25px">Sorry, this product is out of stock </p>
                                        {{/equal}}
                                    {{/if}}
								</div>
							</li>
						</ul>
						<div class="add-to-btn">
							<div class="add-comp">
                                {{#if ../user}}
                                    {{#equal inCart 0}}
                                        {{#equal STOCK "IN STOCK"}}
                                        <a class="btn hvr-hover" href="#"><i class="fas fa-heart"></i> Add to cart</a>
                                        {{/equal}}

                                        {{#equal STOCK "OUT STOCK"}}
                                        <a class="btn hvr-hover" href="/shop"><i class="fas fa-heart"></i> Go to shop</a>
                                        {{/equal}}
                                    {{/equal}}
                                    {{#equal inCart 1}}
                                        <a class="btn hvr-hover" href="/shop" style="margin-right:8px"><i class="fas fa-heart"></i> Go to shop</a>
                                        <a class="btn hvr-hover" href="/shop/cart"><i class="fas fa-heart"></i> Go to cart</a>
                                    {{/equal}}

                                {{else}}
                                    {{#equal STOCK "IN STOCK"}}
                                    <a class="btn hvr-hover" href="/auth/login"><i class="fas fa-heart"></i> Add to cart</a>
                                    {{/equal}}

                                    {{#equal STOCK "OUT STOCK"}}
                                    <a class="btn hvr-hover" href="/shop"><i class="fas fa-heart"></i> Go to shop</a>
                                    {{/equal}}

                                {{/if}}
							</div>
							<div class="share-bar">
								<a class="btn hvr-hover" href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
								<a class="btn hvr-hover" href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
								<a class="btn hvr-hover" href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a>
								<a class="btn hvr-hover" href="#"><i class="fab fa-pinterest-p" aria-hidden="true"></i></a>
								<a class="btn hvr-hover" href="#"><i class="fab fa-whatsapp" aria-hidden="true"></i></a>
							</div>
						</div>
                    </div>
                </div>
                {{/with}}
            </div>
			
            <div class="row my-5">
				<div class="card card-outline-secondary my-4" style="width: 100%;">
					<div class="card-header">
						<h2>Product Reviews</h2>
					</div>
					<div class="card-body">
                        {{#if noReview}}
                        <div class="media mb-3">
                            <p class="no_result_title">{{noReview}}</p>
                        </div>
                        {{else}}
                            {{#each review}}
                            <div class="media mb-3">
                                <div class="mr-2"> 
                                    <img class="rounded-circle border p-1" style="width:50px; height: 50px; margin-right:20px; margin-left:10px" src="{{personimage}}" alt="Generic placeholder image">
                                </div>
                                <div class="media-body">
                                    <p>{{REVIEW}}</p>
                                    <small class="text-muted">Posted by <span style="color: #b0b435; font-size:14px; font-weight:bolder">{{name}}</span> on {{date}}</small>
                                </div>
                            </div>
                            <hr>
                            {{/each}}
						{{/if}}
                        {{#if user}}
                            {{#if clientalreadyreview}}
                            {{else}}
                                <div style="float: left; margin-right: 20px">
                                    <a class="btn hvr-hover" data-toggle="collapse"  href="#formReview">Leave a Review</a>
                                </div>
                            {{/if}}
                        {{else}}
                            <a class="btn hvr-hover" href="/auth/login">Leave a Review</a>

                        {{/if}}
                        <div style="float: right;">
                            
                        <form method="get" id="detailform">
                            {{#if currentPage}}
                            <ul class="pagination">
                                    <li class="page-item">
                                        <input  onchange='this.form.submit();' style="display: none;" id="page-prev" value="{{prePage}}" type="radio" name="reviewpage"/>
                                        <label for="page-prev"  class="btn"><span aria-hidden="true">&laquo;</span></label>
                                    </li>
                                    <li class="page-item"><a class="page-link" style="background-color: #b0b435;">{{currentPage}}</a></li>
                                    <li class="page-item"></li>
                                        <input  onchange='this.form.submit();' style="display: none;" id="page-next" value="{{nextPage}}" type="radio" name="reviewpage"/>
                                        <label for="page-next"  class="btn"><span aria-hidden="true">&raquo;</span></label>
                                    </li>
                            </ul>
                            {{/if}}
                        </form>
                        </div>
                        <form method="post" id="commentForm" >
                            <div class="collapse" id="formReview">
                                <div class="card card-body">
                                    <textarea rows="4" maxlength="500" name="comment" placeholder="Enter your comment here (max: 500 letters)..." required></textarea>
                                    
                                <button  class="btn btn-default bnt-review hvr-hover"  type="submit" >Comment</a>
                                    
                                </div>
                            </div>
                        </form>
                        
                        

                        
						
					</div>
				  </div>
			</div>
            <div class="row my-5">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>Related Products</h1>
                        <p>We have lots of fresh produces every day. Home delivery options available at checkout</p>
                    </div>
                    <div class="featured-products-box owl-carousel owl-theme">
                        {{#each products}}
                        <div class="item">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <img src="{{IMAGE}}" class="img-fluid" alt="Image">
                                    <div class="mask-icon">
                                        <ul>
                                            <li>
                                            <input onchange='this.form.submit();' style="display: none;" id="id" value="{{PRODUCT_ID}}" type="radio" name="id"/>
                                            <a href="/shop/shopDetail/{{PRODUCT_ID}}" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a>
                                            </li>
                                        </ul>
                                    
                                    </div>
                                </div>
                                <div class="why-text">
                                    <h4>{{PRODUCT_NAME}}</h4>
                                    <h5> ${{PRICE}}</h5>
                                </div>
                            </div>
                        </div>
                        
                        {{/each}}
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- End Cart -->


    